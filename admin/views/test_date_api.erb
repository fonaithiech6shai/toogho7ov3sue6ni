<!DOCTYPE html>
<html>
<head>
  <title>Тест API автозаполнения даты</title>
  <meta charset="utf-8">
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    .form-group { margin: 15px 0; }
    label { display: block; margin-bottom: 5px; font-weight: bold; }
    input, button { padding: 8px; font-size: 16px; }
    #results { margin-top: 20px; padding: 15px; background: #f5f5f5; border-radius: 5px; }
    .error { color: red; }
    .success { color: green; }
  </style>
</head>
<body>
  <h1>Тест API автозаполнения даты</h1>
  
  <div class="form-group">
    <label for="order-id">Номер заказа (8 цифр):</label>
    <input type="number" id="order-id" placeholder="12345678">
  </div>
  
  <div class="form-group">
    <button onclick="testAPI()">Получить дату заказа</button>
    <button onclick="testDateField()">Тест автозаполнения</button>
  </div>
  
  <div class="form-group">
    <label for="date-field">Поле даты:</label>
    <input type="text" id="date-field" placeholder="Автоматически заполняемое поле">
  </div>
  
  <div id="results"></div>
  
  <script>
    function testAPI() {
      var orderId = document.getElementById('order-id').value.trim();
      var results = document.getElementById('results');
      
      if (!orderId) {
        results.innerHTML = '<div class="error">Укажите номер заказа</div>';
        return;
      }
      
      results.innerHTML = 'Загрузка...';
      
      var xhr = new XMLHttpRequest();
      xhr.open('GET', '/admin/smiles/order_date/' + orderId, true);
      xhr.setRequestHeader('Content-Type', 'application/json');
      
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            try {
              var response = JSON.parse(xhr.responseText);
              
              if (response.success) {
                results.innerHTML = 
                  '<div class="success">' +
                  '<h3>Успешно!</h3>' +
                  '<p><strong>Номер заказа:</strong> ' + response.order_id + '</p>' +
                  '<p><strong>d2_date:</strong> ' + response.d2_date + '</p>' +
                  '<p><strong>Отформатированная дата:</strong> ' + response.formatted_date + '</p>' +
                  '</div>';
              } else {
                results.innerHTML = '<div class="error"><strong>Ошибка:</strong> ' + response.error + '</div>';
              }
            } catch (e) {
              results.innerHTML = '<div class="error">Ошибка парсинга JSON: ' + e.message + '</div>';
            }
          } else {
            results.innerHTML = '<div class="error">Ошибка HTTP: ' + xhr.status + '</div>';
          }
        }
      };
      
      xhr.send();
    }
    
    function testDateField() {
      var orderId = document.getElementById('order-id').value.trim();
      var dateField = document.getElementById('date-field');
      
      if (!orderId) {
        alert('Укажите номер заказа');
        return;
      }
      
      console.log('Тест автозаполнения для заказа:', orderId);
      
      var xhr = new XMLHttpRequest();
      xhr.open('GET', '/admin/smiles/order_date/' + orderId, true);
      xhr.setRequestHeader('Content-Type', 'application/json');
      
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            try {
              var response = JSON.parse(xhr.responseText);
              console.log('Ответ API:', response);
              
              if (response.success && response.formatted_date) {
                dateField.value = response.formatted_date;
                console.log('Поле даты заполнено:', response.formatted_date);
                alert('Поле даты успешно заполнено!');
              } else {
                console.log('Не удалось получить дату:', response.error);
                alert('Ошибка: ' + (response.error || 'Неизвестная ошибка'));
              }
            } catch (e) {
              console.error('Ошибка парсинга JSON:', e);
              alert('Ошибка парсинга: ' + e.message);
            }
          } else {
            console.error('Ошибка запроса:', xhr.status);
            alert('Ошибка HTTP: ' + xhr.status);
          }
        }
      };
      
      xhr.send();
    }
  </script>
</body>
</html>